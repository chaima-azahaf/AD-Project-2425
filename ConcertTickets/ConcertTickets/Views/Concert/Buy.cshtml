@model ConcertTickets.ViewModels.ConcertViewModel

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <img src="@Model.ArtistPicture" alt="@Model.Artist" class="img-fluid rounded">
            <h2>@Model.Artist</h2>
            <p>@Model.Location</p>
            <p class="text-danger fw-bold">@Model.Date.ToString("dd MMM yyyy")</p>
        </div>
        <div class="col-md-8">
            <h3>Ticket Types</h3>
            <ul class="list-group">
                @foreach (var offer in Model.TicketOffers)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span>
                            <strong>@offer.TicketType</strong> - &euro; @offer.Price
                        </span>
                        <span class="badge bg-primary">@offer.AvailableTickets tickets beschikbaar</span>
                        <a class="btn btn-primary" href="@Url.Action("Create", "Order", new { Id = offer.Id })">
                            Koop tickets
                        </a>
                    </li>
                }
            </ul>
        </div>
    </div>
    <a href="@Url.Action("Index", "Concert")" class="btn btn-secondary mt-3">Terug naar overzicht</a>
</div>
