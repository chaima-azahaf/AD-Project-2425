@model ConcertTickets.ViewModels.OrderFormViewModel

<div class="container mt-5">
    <h2>Bestel tickets voor @Model.ConcertName op @Model.ConcertDate.ToString("dd MMM yyyy")</h2>
    <form asp-action="Create" method="post">
        <input type="hidden" asp-for="TicketOfferId" />
        <input type="hidden" asp-for="UserId" />
        <input type="hidden" asp-for="UserName" />

        <div class="form-group">
            <label>Type:</label>
            <input type="text" class="form-control" value="@Model.TicketType" readonly />
        </div>
        <div class="form-group">
            <label>Prijs:</label>
            <input type="text" class="form-control" value="€ @Model.FinalPrice" readonly />
        </div>
        <div class="form-group">
            <label>Aantal beschikbare tickets:</label>
            <input type="text" class="form-control" value="@Model.AvailableTickets" readonly />
        </div>
        <div class="form-group">
            <label for="NumberOfTickets">Aantal te bestellen tickets (min. 1, max. 5):</label>
            <input type="number" class="form-control" asp-for="NumberOfTickets" min="1" max="5" />
            <span asp-validation-for="NumberOfTickets" class="text-danger"></span>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" asp-for="AcceptTerms" />
            <label class="form-check-label" asp-for="AcceptTerms">
                Ik accepteer de algemene voorwaarden
            </label>
            <span asp-validation-for="AcceptTerms" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Bestellen</button>
        <a href="@Url.Action("Index", "Concert")" class="btn btn-secondary">Annuleer</a>
    </form>
</div>

