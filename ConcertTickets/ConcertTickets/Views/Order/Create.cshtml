@model ConcertTickets.ViewModels.OrderFormViewModel

<div class="container mt-5">
    <h2>Bestel tickets voor @Model.ConcertName op @Model.ConcertDate.ToString("dd MMM yyyy")</h2>

    <form asp-action="Create" method="post">
        <div class="mb-3">
            <label>Type:</label>
            <input type="text" class="form-control" value="@Model.TicketType" disabled>
        </div>
        <div class="mb-3">
            <label>Prijs:</label>
            <input type="text" class="form-control" value="&euro; @Model.Price" disabled>
            @if (Model.HasMemberCard)
            {
                <div class="text-success">Met je lidkaart krijg je 10% korting.</div>
            }
        </div>
        <div class="mb-3">
            <label>Aantal beschikbare tickets:</label>
            <input type="text" class="form-control" value="@Model.AvailableTickets" disabled>
        </div>
        <div class="mb-3">
            <label for="NumberOfTickets">Aantal te bestellen tickets (min. 1, max. 5):</label>
            <input asp-for="NumberOfTickets" class="form-control" />
            <span asp-validation-for="NumberOfTickets" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <input asp-for="AcceptTerms" type="checkbox" />
            <label asp-for="AcceptTerms">Ik accepteer de algemene voorwaarden</label>
            <span asp-validation-for="AcceptTerms" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Bestellen</button>
    </form>
</div>
